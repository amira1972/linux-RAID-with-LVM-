#RAID
lsblk
mdadm --create /dev/md1 -l 5 -n 3 /dev/sd[b,c,d]

cat /proc/mdstat
mdadm --detail --scan >> /etc/mdadm.conf   #to scan the raid array
nano /etc/mdadm.conf    #past the output of the past command

#LVM
pvcreate /dev/md1
vgcreate -n vg_group /dev/md1
lvcreate -L 2G -n lv_disk vg_group
mkfs.ext4 /dev/vg_group/lv_disk
mkdir /amira1
chmod 755 /amira1
mount /dev/vg_group/lv_disk /amira1
df -h

blkid /dev/vg_group/lv_disk
nano /etc/fstab 
   #UUID /amira1 ext4  defaults 0 0

lvextend -L +1G /dev/vg_group/lv_disk
resize2fs /dev/vg_group/lv_disk

#remove th RAID

umount /amira1
lvremove /dev/vg_group/lv_disk
vgremove vg_group
pvremove /dev/md1
mdadm --stop /dev/md1
mdadm --zero-superblock /dev/sd[b,c,d]
